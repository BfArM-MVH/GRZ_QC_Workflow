process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]
}

params {
    submission = "grz-mini-test-data/submissions/wgs"
    outdir = "${projectDir}/tests/results"
    genomes.GRCh37.fasta = "grz-mini-test-data/references/GRCh37/mini.fa.gz"
    genomes.GRCh37.targets = "grz-mini-test-data/references/GRCh37/mini.genes.bed"
}

process {
    withName: 'MOSDEPTH' {
        cpus = 2
        memory = 4.GB
        time = 2.h
    }
    withName: 'BWAMEM2_MEM' {
        cpus = 2
        memory = 4.GB
        time = 2.h
    }
    withName: 'BWAMEM2_INDEX' {
        cpus = 2
        memory = 4.GB
        time = 2.h
    }
}
