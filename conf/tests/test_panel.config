process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]
}

params {
    submission_basepath = "grz-mini-test-data/submissions/panel"
    outdir = "${projectDir}/tests/results"
    thresholds = "${projectDir}/assets/default_files/thresholds.json"
    fasta = "grz-mini-test-data/references/GRCh37/mini.fa.gz"
    target = "grz-mini-test-data/references/GRCh37/mini.genes.bed"
}

process {
    withName: 'MOSDEPTH' {
        cpus = 2
        memory = 4.GB
        time = 2.h
    }
    withName: 'BWAMEM2_MEM' {
        cpus = 2
        memory = 4.GB
        time = 2.h
    }
    withName: 'BWAMEM2_INDEX' {
        cpus = 2
        memory = 4.GB
        time = 2.h
    }
}
