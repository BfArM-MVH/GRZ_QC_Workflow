/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run main.nf -profile test_38,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]
}

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'
    input = "${projectDir}/tests/data/samplesheet_WES_test.csv"
    outdir = "${projectDir}/tests/output"

    genome = "GRCh38"
    thresholds = "${projectDir}/assets/default_files/thresholds.json"
    fasta = "https://raw.githubusercontent.com/nf-core/test-datasets/modules/data/genomics/homo_sapiens/genome/genome.fasta"
    target = "https://raw.githubusercontent.com/nf-core/test-datasets/refs/heads/sarek/testdata/target.bed"

}
withName: 'MOSDEPTH' {
    cpus = 2
    memory = 16.GB
    time = 2.h
}
withName: 'BWAMEM2_MEM' {
    cpus = 2
    memory = 4.GB
    time = 2.h
}
withName: 'BWAMEM2_INDEX' {
    cpus = 2
    memory = 4.GB
    time = 2.h
}
