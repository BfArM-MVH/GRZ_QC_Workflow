nextflow_pipeline {

    name "Test Workflow main.nf"
    script "../main.nf"
    config "../conf/tests/test_tiny.config"

    test("Tiny Test, case senario: input=samplesheet.example.csv, 3 samples in total, 2 samples of WES, tumor+germline, 1 sample of WGS_lr; multi lanes; fasta reference is being pulled") {

        when {
            params {
                outdir = "${outputDir}"
            }
        }

        then {
            def stable_path = getAllFilesFromDir(params.outdir, relative:true, ignoreFile: 'tests/.nftignore')
            def report = path("${params.outdir}/report.csv")

            assertAll(
                { assert workflow.success },
                { assert snapshot(
                    // Number of successful tasks
                    workflow.trace.succeeded().size(),
                    // All stable path name, with a relative path
                    stable_path,
                    // All files with stable contents
                    report
                ).match() }
            )
        }

    }

}
