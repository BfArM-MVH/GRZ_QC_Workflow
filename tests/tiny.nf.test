nextflow_pipeline {

    name "Test Workflow main.nf"
    script "../main.nf"
    config "../conf/tests/test_tiny.config"

    test("Tiny dataset should run without failures and produce expected files") {

        when {
            params {
                outdir = "${outputDir}"
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(
                    getAllFilesFromDir(params.outdir, relative:true, ignoreFile: 'tests/.nftignore')
                ).match() }
            )
        }

    }

}
