nextflow_pipeline {

    name "Test Workflow main.nf"
    script "../main.nf"
    config "../conf/tests/test_alignment.config"

    test("Alignement Test, case senario: input=test-dataset-alignments, 2 samples of WES, tumor+germline, bam input, 1 sample has fastp_json") {

        when {
            params {
                outdir = "${outputDir}"
            }
        }

        then {
            def stable_path = getAllFilesFromDir(params.outdir, relative:true, ignoreFile: 'tests/.nftignore')
            def report = path("${params.outdir}/report.csv")

            assertAll(
                { assert workflow.success },
                { assert snapshot(
                    // Number of successful tasks
                    workflow.trace.succeeded().size(),
                    // All stable path name, with a relative path
                    stable_path,
                    // All files with stable contents
                    report
                ).match() }
            )
        }
    }

}
